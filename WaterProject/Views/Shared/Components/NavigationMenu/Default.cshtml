@{
}

@model IEnumerable<string>

<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">Home</a>

@foreach (string cat in Model)
{
    <a class="btn btn-block
       @(cat == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index" asp-controller="Home" asp-route-category="@cat" asp-route-page="1">@cat</a>
}